@model CreateCarDto
@{
    ViewData["Title"] = "CreateCar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- page content -->
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Add New Car</h4>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputPlateNumber">Plate Number</label>
                                <input type="text" class="form-control" asp-for="PlateNumber" id="exampleInputName" placeholder="Add Plate Number">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputBrand">Brand</label>
                                <input type="text" class="form-control" asp-for="Brand" id="exampleInputBrand" placeholder="Add Brand">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Model</label>
                                <input type="text" class="form-control" asp-for="Model" id="exampleInputModel" placeholder="Add Model">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputColor">Color</label>
                                <input type="text" class="form-control" asp-for="Color" id="exampleInputColor" placeholder="Add Color">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Save</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

