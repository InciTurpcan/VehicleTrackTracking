@model ResultCarWithPartsDto
@{
    ViewData["Title"] = "CarDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Car Details</h5>
            <div class="row">
                <div class="col">
                    <p class="card-text"><strong>Car ID:</strong> <span id="carId">@Model.CarId</span></p>
                    <p class="card-text"><strong>Plate Number:</strong> <span id="plateNumber">@Model.PlateNumber</span></p>
                    <p class="card-text"><strong>Brand:</strong> <span id="brand">@Model.Brand</span></p>
                    <p class="card-text"><strong>Model:</strong> <span id="model">@Model.Model</span></p>
                    <p class="card-text"><strong>Color:</strong> <span id="color">@Model.Color</span></p>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <h5 class="card-title">Parts</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Part Id</th>
                        <th>Part Name</th>
                        <th>Category </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var part in Model.Parts)
                    {
                        <tr>
                            <td>@part.PartId</td>
                            <td>@part.Name</td>
                            <td>@part.PartCategory.PartCategoryName</td>
                        </tr>
                    }
                </tbody>
                
            </table>
        </div>
    </div>
</div>

