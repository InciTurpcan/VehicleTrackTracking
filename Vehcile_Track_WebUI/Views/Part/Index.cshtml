@model List<PartDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<td><a href="/Part/CreatePart/" class="btn btn-success">+ ADD PART</a></td>

<table class=" table table-hover">
    <thead>
        <tr>

            <th scope="col">Part Id</th>
            <th scope="col">Name</th>
            <th></th>
            <th></th>
            <th></th>


        </tr>
    </thead>
    <tbody>


        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.PartId</th>
                <td>@item.Name</td>

                <td><a href="/Part/UpdatePart/@item.PartId" class="btn btn-secondary">Update</a></td>
                <td><a href="/Part/DeletePart/@item.PartId" class="btn btn-danger">Delete</a></td>
                

            </tr>
        }


    </tbody>
</table>


