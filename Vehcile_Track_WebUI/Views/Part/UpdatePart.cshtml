@model UpdatePartDto
@{
    ViewData["Title"] = "UpdatePart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- page content -->
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Update Part</h4>

                        <form method="post">
                            <input type="hidden" asp-for="PartId" />
                            <input type="hidden" asp-for="CarId" />
                         
                            <div class="form-group">
                                <label for="exampleInputName">Part Name</label>
                                <input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="">
                            </div>
                            <div class="form-group my-3">
                                <label for="exampleInputName">Part Category Name</label>
                                @Html.DropDownListFor(x => x.PartCategoryId, (List<SelectListItem>)ViewBag.partCategories, new { @class = "form-control" })
                            </div>
                          

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Update</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

